<Window x:Class="PL.Products.ChooseForM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Products"
        mc:Ignorable="d"
        Title="ChooseForM" Height="450" Width="800" Background="Black">
    <Window.Resources>
        <Style x:Key="myButtonStyle" TargetType="Button">
            <Setter Property="FontSize"
                    Value="27"/>
            <Setter Property="FontStyle"
                    Value="Oblique" />
            <Setter Property="FontWeight"
                    Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Name="MainGrid" Margin="-2,0,-5,-3" RenderTransformOrigin="0.5,0.5">
        <Grid.Background>
            <ImageBrush ImageSource="/Products/massimo_dutti.jpg"/>
        </Grid.Background>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.226"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="0"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource myButtonStyle}" Content="Products list" Margin="59,260,421,69" Grid.Row="1" Click="Button_Click" Foreground="#FFF1E7E7" Background="Black" BorderBrush="{x:Null}" FontFamily="Poor Richard"/>
        <Button Style="{StaticResource myButtonStyle}" Content=" Orders list" Margin="347,269,84,63" Foreground="#FFFCF1F1" Grid.Row="1" BorderBrush="Black" Background="Black" FontFamily="Poor Richard" RenderTransformOrigin="0.5,0.5" Click="OrderList_">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.424"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
       

    </Grid>

</Window>
